<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

  <metal:body fill-slot="body"
      tal:define="show_border nothing">

    <h1 class="documentFirstHeading">Manage subscriptions</h1>

    <tal:defineRequests tal:define="items view/requests">
      <h2>Subscription requests</h2>

      <table class="listing">
        <tr tal:repeat="item items"
            tal:attributes="class python:repeat['item'].odd" >
          <td tal:content="item/user_id" />
        </tr>
      </table>
      <p tal:condition="not: items">
        No requests yet
      </p>

    </tal:defineRequests>

    <tal:defineSubscriptions tal:define="items view/subscriptions">
      <h2>Subscriptions</h2>
      <p tal:repeat="item items"
          tal:content="item">
        [the subscriptions list]
      </p>
      <p tal:condition="not: items">
        No subscriptions yet
      </p>
    </tal:defineSubscriptions>

  </metal:body>

</body>
</html>

